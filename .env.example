# Claude Code LangFuse Observer - Environment Configuration
# Copy this file to .env and update with your settings

# LangFuse API Configuration
LANGFUSE_HOST=http://localhost:3001
LANGFUSE_PUBLIC_KEY=pk-lf-1234567890
LANGFUSE_SECRET_KEY=sk-lf-0987654321
LANGFUSE_PROJECT_ID=claude-project

# User Configuration
CLAUDE_USER_ID=your-email@example.com
CLAUDE_TRACKING_ENABLED=true
CLAUDE_AUTO_SCORE=true

# Docker Configuration
# IMPORTANT: Generate secure keys for production!
# Use: openssl rand -hex 32
NEXTAUTH_SECRET=your-secret-key-change-me-in-production
SALT=your-salt-change-me-in-production

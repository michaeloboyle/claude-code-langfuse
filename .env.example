# Admin Credentials (change for production!)
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=admin123

# Organization Setup
LANGFUSE_INIT_ORG_ID=claude-org
LANGFUSE_INIT_ORG_NAME=Claude Code Observer
LANGFUSE_INIT_PROJECT_ID=claude-project
LANGFUSE_INIT_PROJECT_NAME=Claude Interactions